{
  "env_name":"Ant-v2",
  "unity_env": "False",
  "state_size": [2,111],
  "action_size": 8,

  "agent": {
            "network": "MLP",
            "actor": {
              "num_of_layers": 2,
              "filter_size": [400,300],
              "activation": "relu",
              "actor_activation": "tanh",
              "batch_norm": "None"
            },
            "critic": {
              "num_of_layers": 3,
              "activation": "relu",
              "batch_norm": "None",
              "filter_size": [400,300,1]
            }

  },
  "sigma": 0.2,
  "theta": 0.15,

  "tau": 0.001,
  "conservative_mode": "True",
  "run_step": 3e6,
  "start_step": 250,
  "show_episode": 5,

  "size_replay_memory": 1e6,
  "batch_size": 64,
  "learning_freq": 1,
  "reward_scaling": 0.5,

  "optimizer": {
    "actor": {
      "name": "adam",
      "learning_rate": 1e-4,
      "weight_decay": 0,
      "eps": 1e-7,
      "clipping": "None"
    },
    "critic": {
      "name": "adam",
      "learning_rate": 1e-3,
      "weight_decay": 1e-2,
      "clipping": "None",
      "max_norm": 2.5,
      "eps": 1e-7
    }
  },
  "discount_factor": 0.99,

  "save_path": "./save/03_DDPG/",
  "tensorboard_path": "./tensorboard/03_DDPG/",
  "load_path":"None",

  "is_gpu": "True",
  "gpu_name": "cuda:0",
  "Exploration_method": "e_greedy",
  "epsilon_min": 0.1,
  "epsilon": 1.0,
  "inference_mode": "False",
  "render_mode": "False"
}
